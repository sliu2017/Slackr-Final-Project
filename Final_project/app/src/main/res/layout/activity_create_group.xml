<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateGroupActivity">


    <ImageView
        android:id="@+id/img_create"
        android:layout_width="394dp"
        android:layout_height="145dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bg" />

    <TextView
        android:id="@+id/title_create"
        android:layout_width="274dp"
        android:layout_height="60dp"
        android:layout_marginStart="59dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="61dp"
        android:text="Create a group"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="@+id/img_create"
        app:layout_constraintStart_toStartOf="@+id/img_create"
        app:layout_constraintTop_toTopOf="@+id/img_create" />

    <LinearLayout
        android:id="@+id/linearLayout6"
        android:layout_width="395dp"
        android:layout_height="637dp"
        android:layout_marginTop="6dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_create">

        <EditText
            android:id="@+id/group_name"

            style="@android:style/Widget.DeviceDefault.EditText"
            android:layout_width="match_parent"
            android:layout_height="63dp"
            android:background="@drawable/editcreatebg"
            android:backgroundTint="#F7FDFD"
            android:hint="@string/group_name"
            android:importantForAutofill="no"
            android:inputType="textPersonName"
            android:singleLine="true"
            android:textAlignment="viewStart"
            android:textColor="#171616"
            android:textColorHint="#000000"
            android:textSize="18sp"
            tools:text="@string/group_name" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
